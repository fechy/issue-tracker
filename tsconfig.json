{
  "compilerOptions": {
    "types" : ["node", "lodash", "express", "jest"],
    "target": "es6",
    "module": "commonjs",
    "lib": ["es2015"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
